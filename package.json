{
  "name": "pegno",
  "version": "1.0.0",
  "description": "Gerenciador de workspace global de dependÃªncias para Bun â€” by Suissa ðŸ§ ",
  "type": "module",
  "bin": {
    "pegno": "./dist/pegno.js"
  },
  "scripts": {
    "dev": "bun run --watch pegno.ts",
    "start": "bun run pegno.ts",
    "clean": "rm -rf node_modules bun.lock bun.lockb && bun pm cache clean",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "bun run format && bun run lint",
    "build": "bun build pegno.ts --outdir dist --target bun",
    "test:integration": "pwsh -File test-integration.ps1 -All",
    "test:integration:windows": "pwsh -File test-integration.ps1 -Windows",
    "test:integration:wsl": "pwsh -File test-integration.ps1 -WSL",
    "test:integration:linux": "bash test-integration.sh"
  },
  "keywords": [
    "bun",
    "workspace",
    "dependency-cache",
    "global-workspace",
    "pegno",
    "suissera"
  ],
  "author": "Suissa <inmybox@suissai.dev>",
  "license": "MIT",
  "engines": {
    "bun": ">=1.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
