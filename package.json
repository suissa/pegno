{
  "name": "p3g",
  "version": "0.1.0",
  "description": "Gerenciador de workspace global de dependÃªncias para Bun â€” by Suissa ðŸ§ ",
  "type": "module",
  "bin": {
    "p3g": "./dist/p3g.js"
  },
  "scripts": {
    "dev": "bun run --watch p3g.ts",
    "start": "bun run p3g.ts",
    "clean": "rm -rf node_modules bun.lock bun.lockb && bun pm cache clean",
    "clean:windows": "Remove-Item -Recurse -Force node_modules, bun.lock, bun.lockb -ErrorAction SilentlyContinue; bun pm cache clean",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "lint:fix": "bun run fix-eslint.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "bun run format && bun run lint",
    "build": "bun build p3g.ts --outdir dist --target bun",
    "build:windows": "bun build p3g.ts --outdir dist --target bun --outfile p3g.js",
    "install:windows": "pwsh -ExecutionPolicy Bypass -File install-windows.ps1",
    "install:windows:global": "pwsh -ExecutionPolicy Bypass -File install-windows.ps1 -Global",
    "test:windows": "pwsh -ExecutionPolicy Bypass -File test-windows.ps1",
    "test:windows:verbose": "pwsh -ExecutionPolicy Bypass -File test-windows.ps1 -Verbose",
    "test:windows:clean": "pwsh -ExecutionPolicy Bypass -File test-windows.ps1 -CleanUp",
    "test:integration": "pwsh -File test-integration.ps1 -All",
    "test:integration:windows": "pwsh -File test-integration.ps1 -Windows",
    "test:integration:wsl": "pwsh -File test-integration.ps1 -WSL",
    "test:integration:linux": "bash test-integration.sh"
  },
  "keywords": [
    "bun",
    "workspace",
    "dependency-cache",
    "global-workspace",
    "p3g",
    "suissera"
  ],
  "author": "Suissa <inmybox@suissai.dev>",
  "license": "MIT",
  "engines": {
    "bun": ">=1.1.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suissa/p3g.git"
  },
  "bugs": {
    "url": "https://github.com/suissa/p3g/issues"
  },
  "homepage": "https://github.com/suissa/p3g#readme",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "latest",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.2",
    "bun-types": "latest",
    "kleur": "^4.1.5",
    "typescript": "^5.6.0",
    "undici-types": "~7.16.0"
  }
}
